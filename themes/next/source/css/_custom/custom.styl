// Custom styles.
table td span {
    color:#f0f;
}
table td sup {
    font:11px "Arial";
    color:#f00;
}
.triangle {
    overflow:hidden;
    width:0;
    height:0;
    font:0/0 "";
    border:10px solid #f00;
    border-top:10px solid #ff0;
    border-right:10px solid #f0f;
    border-left:10px solid #0ff;
}
.triangle2 {
    overflow:hidden;
    width:0;
    height:0;
    font:0/0 "";
    border:10px dashed transparent;
    border-bottom:10px solid #ff9600;
}
.header-inner {
    padding: 20px 0;
}
.post .highlight pre {
    white-space: pre-wrap;
    word-wrap: break-word;
}